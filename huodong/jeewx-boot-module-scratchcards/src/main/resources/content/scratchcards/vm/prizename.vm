		<script type="text/javascript">
		$(document).ready(function(){
			$("#save-btn").bind("click",function(){
				var btn=$(this);
				var tel=$("#tel").val();
				var name=$("#username").val();
				var adr=$("#address").val();
				var awards=$("#hidden_awards").val();
				if(name==''){
					alert("请输入收货人姓名");
					return
				}
				if(adr==''){
					alert("请输入收货人地址");
					return
				}
				if(tel==''){
					alert("请输入手机号码");
					return
				}
				var regu=/^[1][3-8]+\d{9}$/;
				var re=new RegExp(regu);
				if(!re.test(tel)){
					alert("请输入正确手机号码");
					return
				}
				var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
				var recordId=$("#hidden_record_id").val();
				jQuery.ajax({
		       		url:"../scratchcards/saveScratchCardsPrize.do",
		       		method:"POST",
		       		dataType:"JSON",
		       		data:{mobile:tel,username:name,address:adr,recordId:recordId},
		       		success:function(data){
		       		   if(data.success){
		       		   		alert("提交成功，谢谢参与！");
		       			  url="../scratchcards/toMyPrize.do";
							location.href= url + "?actId=" + actId + "&jwid=" + jwid + "&openid=" +openid;
		       		   }else{
		       		   		alert(data.msg);
		       		   }
		       		}
		       });
		   });
		   });
		//编辑详细信息
		function bianji(id){
		var flag = false;
		 		var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
				jQuery.ajax({
					url:"../scratchcards/toUpdateMessage.do",
		       		method:"POST",
		       		dataType:"JSON",
		       		data:{jwid:jwid,actId:actId,openid:openid,id:id},
		       		success:function(data){
		       		   if(data.success){
		       		   	if(data.obj=="iscode"){
		       				userName=data.attributes.userName;	
		       				userAddress=data.attributes.userAddress;	
		       				userMobilee=data.attributes.userMobile;	
		       				$("#username").val(userName);
		       				$("#address").val(userAddress);
		       				$("#tel").val(userMobilee);
		       				$("#hidden_record_id").val(id);
		       				$("#infoinput").css("display","block");
		       				}
		       		   }
		       		}
		       });
		
		
		}
		//隐藏弹出详细信息页面
		$("#replay-btn").bind("click",function(){
				$('#infoinput').hide();
			});
		//跳转活动链接
		function home(){
		 		var jwid=$("#jwid").val();
				var actId=$("#actId").val();
				var openid=$("#openid").val();
